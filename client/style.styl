*
  box-sizing border-box
  color #eee
  font-family monospace

html
  margin 0
  padding 0
  background-color #2f1238

body
  max-width 923px
  margin 15px auto
  padding 10px

a, button
  cursor pointer

header
  a
    text-decoration none

table
  font-size 104%

  td
    padding 0 7px

main#record
  .body
    margin 20px 0
    padding 12px 15px
    border-radius 8px
    background-color rgba(255, 255, 255, 0.4)

  iframe
    width 100%
    min-height 600px

footer
  margin-top 200px
